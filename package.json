{
  "name": "extension-boilerplate",
  "version": "0.0.1",
  "author": "nishu-murmu",
  "description": "Boilerplate extension integrated with tailwindcss.",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "chrome-extension",
    "react",
    "vite",
    "create-chrome-ext",
    "tailwindcss"
  ],
  "engines": {
    "node": ">=14.18.0"
  },
  "scripts": {
    "dev": "concurrently --names \"vite,tailwindcss\" \"vite\"  \"npx tailwindcss -i ./src/styles/input.css -o ./src/styles/output.css --watch\"",
    "build": "npx tailwindcss -i ./src/styles/input.css -o ./src/styles/output.css && tsc && vite build",
    "preview": "vite preview",
    "fmt": "prettier --write '**/*.{tsx,ts,json,css,scss,md}'"
  },
  "dependencies": {
    "@tanstack/react-table": "^8.9.3",
    "@types/tailwindcss": "^3.1.0",
    "concurrently": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.2",
    "react-toastify": "^9.1.3",
    "recoil": "^0.7.7"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^1.0.12",
    "@types/chrome": "^0.0.236",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@vitejs/plugin-react": "^1.3.2",
    "autoprefixer": "^10.4.14",
    "glob": "^9.2.1",
    "postcss": "^8.4.23",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.3.2",
    "typescript": "^4.6.4",
    "vite": "^2.9.13",
    "vite-plugin-zip-pack": "^1.0.5"
  },
  "postcss": "./postcss.config.js"
}
